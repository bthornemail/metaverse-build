{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "World IR",
  "type": "object",
  "required": ["world"],
  "properties": {
    "world": {"type": "string"},
    "entities": {
      "type": "array",
      "items": {"$ref": "#/definitions/entity"}
    },
    "zones": {
      "type": "array",
      "items": {"$ref": "#/definitions/zone"}
    },
    "rules": {
      "type": "array",
      "items": {"$ref": "#/definitions/rule"}
    },
    "portals": {
      "type": "array",
      "items": {"$ref": "#/definitions/portal"}
    },
    "attachments": {
      "type": "array",
      "items": {"$ref": "#/definitions/attachment"}
    },
    "events": {
      "type": "array",
      "items": {"$ref": "#/definitions/event"}
    }
  },
  "additionalProperties": false,
  "definitions": {
    "entity": {
      "type": "object",
      "required": ["id", "components"],
      "properties": {
        "id": {"type": "string"},
        "components": {
          "type": "array",
          "items": {"$ref": "#/definitions/component"}
        },
        "owner": {"type": "string"},
        "zone": {"type": "string"}
      },
      "additionalProperties": false
    },
    "component": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {"type": "string"},
        "data": {"type": "object"}
      },
      "additionalProperties": true
    },
    "zone": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {"type": "string"},
        "bounds": {"type": "object"},
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": false
    },
    "attachment": {
      "type": "object",
      "required": ["id", "target", "kind"],
      "properties": {
        "id": {"type": "string"},
        "target": {"type": "string"},
        "kind": {"type": "string"},
        "ref": {"type": "string"}
      },
      "additionalProperties": false
    },
    "rule": {
      "type": "object",
      "required": ["id", "guard", "effect"],
      "properties": {
        "id": {"type": "string"},
        "guard": {"type": "object"},
        "effect": {"type": "object"}
      },
      "additionalProperties": false
    },
    "event": {
      "type": "object",
      "required": ["id", "intent"],
      "properties": {
        "id": {"type": "string"},
        "intent": {"type": "object"},
        "authority": {"type": "string"}
      },
      "additionalProperties": false
    },
    "portal": {
      "type": "object",
      "required": ["id", "entry"],
      "properties": {
        "id": {"type": "string"},
        "entry": {"type": "object"}
      },
      "additionalProperties": false
    }
  }
}
